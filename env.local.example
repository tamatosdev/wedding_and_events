# Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database (for local Docker setup)
DATABASE_URL="postgresql://postgres:password@localhost:5432/shadi_portal"

# NextAuth.js
NEXTAUTH_SECRET="your-local-nextauth-secret-key-here-make-it-long-and-random"
NEXTAUTH_URL="http://localhost:3000"

# Cloudinary (for image uploads) - Get these from cloudinary.com
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# SMTP Email Configuration (for local testing)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Optional: For development
NODE_ENV="development"
